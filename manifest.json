{
  "manifest_version": 3,
  "name": "Pure Notepad",
  "version": "1.0.0",
  "description": "A beautiful, offline-only notepad with macOS-inspired design",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}